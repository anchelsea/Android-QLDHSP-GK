<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:elevation="12dp"
    tools:context=".ThemSanPham">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Sửa Thông Tin Sản Phẩm"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#00FFFF"
            android:padding="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wave"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <EditText
            android:id="@+id/suatensanpham"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Nhập Tên Sản Phẩm"
            android:gravity="center"
            android:background="@drawable/round_border"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/suaxuatxu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Xuất Xứ"
            android:gravity="center"
            android:background="@drawable/round_border"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/suadongia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Đơn Giá"
            android:gravity="center"
            android:background="@drawable/round_border"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/suahinhanh"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/border"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_suaSanPham"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/ripple_btn"
            android:textColor="#90000000"
            app:backgroundTint="@null"
            android:text="Cập Nhật"
            />
        <Button
            android:id="@+id/btn_huysuaSanPham"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/ripple_btn"
            android:textColor="#90000000"
            app:backgroundTint="@null"
            android:text="Huỷ"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>

</LinearLayout>




















